<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title><%= shopData.shopName %> – All Books</title>

    <!-- Load the main stylesheet -->
    <link rel="stylesheet" href="/main.css" />
  </head>

  <body>
    <!-- Page heading -->
    <h1><%= shopData.shopName %> – Book List</h1>

    <!-- If no books exist, display a message -->
    <% if (books.length === 0) { %>
    <p>No books found.</p>

    <!-- otherwise, display table of books -->
    <% } else { %>
    <table border="1" cellpadding="8" cellspacing="0">
      <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Price (£)</th>
        </tr>
      </thead>

      <tbody>
        <% books.forEach(function(book) { %>
        <tr>
          <td><%= book.id %></td>
          <td><%= book.name %></td>
          <td><%= book.price %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
    <% } %>

    <!-- nvigation link -->
    <p><a href="/">Back to home</a></p>
  </body>
</html>
